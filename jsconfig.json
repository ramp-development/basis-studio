{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowJs": true,
        "checkJs": false,
        "strict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@src/*": ["src/*"],
            "@comp/*": ["src/components/*"],
            "@modules/*": ["src/modules/*"],
            "@gl/*": ["src/gl/*"],
            "@pages/*": ["src/pages/*"],
            "@utils/*": ["src/utils/*"],
            "@styles/*": ["src/css/*"],
            "@transitions/*": ["src/transitions/*"]
        },
        "types": ["gsap"],
        "typeRoots": ["node_modules/@types", "src/types"]
    },
    "include": ["src/**/*", "src/types/**/*"],
    "exclude": ["node_modules", "dist"]
}